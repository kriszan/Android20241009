<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Játékos"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dontetlenek"
        android:layout_above="@+id/userselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Döntetlenek száma: 0"/>

    <ImageView
        android:id="@+id/userselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxHeight="20dp"
        android:src="@drawable/rock" />

    <TextView
        android:id="@+id/yourchoice"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userselect"
        android:layout_centerHorizontal="true"
        android:text="A te választásod" />

    <ImageView
        android:id="@+id/computerselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourchoice"
        android:layout_centerHorizontal="true"
        android:maxHeight="20dp"
        android:src="@drawable/rock" />

    <TextView
        android:id="@+id/mychoice"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/computerselect"
        android:layout_centerHorizontal="true"
        android:text="A gép választása" />

    <TextView
        android:id="@+id/eredmeny"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mychoice"
        android:layout_centerHorizontal="true"
        android:text="Eredmeny: Ember: 0 Computer: 0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eredmeny"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:tag="buttonRock"
            android:onClick="userClicked"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kő" />

        <Button
            android:tag="buttonPaper"
            android:onClick="userClicked"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papír" />

        <Button
            android:tag="buttonScissors"
            android:onClick="userClicked"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olló" />
    </LinearLayout>

</RelativeLayout>